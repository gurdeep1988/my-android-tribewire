<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="MyHolo" parent="">

        

        <item name="android:editTextColor">#000000</item>
</style>
    
       <style
      name="textBig">
      <item
         name="android:textSize">19dip</item>
      <item
         name="android:textStyle">bold</item>
      <item
         name="android:textColor">#000</item>
   
   </style>
   <style
      name="textBigsender">
      <item
         name="android:textSize">16dip</item>
      <item
         name="android:textStyle">bold</item>
      <item
         name="android:textColor">#000</item>
   
   </style>
    <style name="Animations" parent="@android:Animation" />
  <style name="Animations.MenuAnimation">
        <item name="android:windowEnterAnimation">@anim/menu_animation_in</item>
        <item name="android:windowExitAnimation">@anim/menu_animation_out</item>
    </style>  
    <style name="button_black">
        <item name="android:background">@drawable/menu_button_black</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:typeface">sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3sp</item>
    </style>
    
     <style name="MyDialogTheme" parent="android:Theme.Dialog">
        <!-- Fill the screen -->
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>

        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>      

        <!-- Just to prove it's working -->
        <item name="android:background">@android:color/transparent</item>
    </style>
    <color name="menuitembg">#2e3a47</color>
</resources>
